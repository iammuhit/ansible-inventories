---
ungroped:
  hosts:
    mail.example.com:
      ansible_host: 192.168.50.10
      ansible_ssh_private_key_file: ./.vagrant/machines/mail.example.com/virtualbox/private_key
  vars:
    ansible_user: vagrant
    ansible_port: 22
    ansible_ssh_common_args: >-
      -o StrictHostKeyChecking=no
      -o UserKnownHostsFile=/dev/null

webservers:
  hosts:
    web.example.com:
      ansible_host: 192.168.50.11
      ansible_ssh_private_key_file: ./.vagrant/machines/web.example.com/virtualbox/private_key

dbservers:
  hosts:
    db.example.com:
      ansible_host: 192.168.50.12
      ansible_ssh_private_key_file: ./.vagrant/machines/db.example.com/virtualbox/private_key

appservers:
  children:
    webservers:
    dbservers:
  vars:
    ansible_user: vagrant
    ansible_port: 22
    ansible_ssh_common_args: >-
      -o StrictHostKeyChecking=no
      -o UserKnownHostsFile=/dev/null

east:
  hosts:
    web.example.com:
    db.example.com:
west:
  hosts:
    mail.example.com:
prod:
  children:
    east:
test:
  children:
    west:
